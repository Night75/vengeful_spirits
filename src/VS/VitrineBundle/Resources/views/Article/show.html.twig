{% extends "::base.html.twig" %}


{% block body %}	
<!-- *************** ------------------- _____________________ LISTE DES NEWS _____________________ ------------------ ***************-->		
	
	<section id="articles-content">
		<div class="article gn-panel-wrapper">
			<div class="bdr-top-left"></div>
			<div class="bdr-bot-right"></div>
			<div class="gn-panel-container">

				<div class="article-title">
					<h3><a href="">{{article.title}}</a></h3>
					<p>
						<span class="txt-annotation">Le {{article.createdAt | date("d/m/Y") }}, par</span>
						<a href="{{path('vs_vitrine_homepage')}}" class="txt-legend"> Quelqu'un</a>
					</p>
				</div>
				<div class="img-article-full"><img src="{{path_img_articles}}{{article.image | default("default.jpg")}}"/></div>
				<div class="article-content">
					<p>
						{{article.content}}
					</p>
				</div>
			</div>
		</div>
	</section>
{% endblock %}