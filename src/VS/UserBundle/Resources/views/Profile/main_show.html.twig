{% extends "FOSUserBundle::layout.html.twig" %}

{% set path_user_img =  asset("uploads/users/") %}

{% block fos_user_content %}
<div class="fos_user_user_show">
	<h2>Mon profil</h2>
	<p><img class="img-avatar" src="{{path_user_img}}{{user.avatar | default("default.png")}}"/></p>
    <p><b>{{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}:</b> {{ user.username }}</p>
    <p><b>{{ 'profile.show.email'|trans({}, 'FOSUserBundle') }}:</b> {{ user.email }}</p>
    <p><b>Civilite:</b> {% if user.gender == "M" %} Homme {% else %} Femme {% endif %}</p>
    <p><b>Signature:</b> {% if user.signature is null %}Pas de signature {% else %}<i>{{user.signature }}</i>{% endif %}</p>
    <p><b>Date d'inscription:</b> Le {{user.registerDate | date('d/m/Y')}} </p>
    <p><b>Derniere connection:</b> Le {{user.lastLogin | date('d/m/Y Ã  G:i')}} </p>
 <div class="bk-bt-tool">

<div class="bk-tools">
    <a href="{{path('fos_user_change_password')}}" class="title-small">Changer mon mot de passe</a><br><br>
    <a href="{{path('vs_user_edit')}}" class="bt-upcase">Editer mon profil</a>
</div>
{% endblock %}